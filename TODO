visual mode:
	exec-region = :%!$repl
	n number of cursor points - multi/mark insert?

keys:
	check:
		dd, yy, cc
	s
	R - multi-char replacement

motions:
	%
	n, N
	[[
	i:
		iw
		i{

cmds:
	:! / cmd parsing
	save-check  on :q/e
	exist-check on :w
	:e - limit cursor to (x, max_lines) when loading a new file
